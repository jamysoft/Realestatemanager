<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimulationActivity">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/amount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="25dp"
        app:errorEnabled="true"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_baseline_money_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/apportTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/aport"
        app:layout_constraintTop_toBottomOf="@id/amountTextField"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:errorEnabled="true"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_baseline_euro_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tauxTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/taux"
        app:layout_constraintTop_toBottomOf="@id/apportTextField"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:errorEnabled="true"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_baseline_percent_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/iconDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tauxTextField"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_access_time_filled_24"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/durationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duration"
        app:layout_constraintTop_toTopOf="@id/iconDuration"
        app:layout_constraintStart_toEndOf="@id/iconDuration"
        android:paddingLeft="2dp"
        />
    <com.google.android.material.slider.RangeSlider
        android:id="@+id/duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="20.0"
        android:valueTo="600.0"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/durationText"
        android:stepSize="1"
        android:layout_marginLeft="50dp"
        style="@style/Widget.App.Slider" />
 <Button
     android:id="@+id/buttonEstimate"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:layout_constraintTop_toBottomOf="@id/duration"
     app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
     android:layout_margin="10dp"
     android:text="Estimate"
    android:drawableLeft="@drawable/ic_baseline_euro_24"
     />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monthlyPaymentextField"
        android:hint="@string/monthlyAmount"
        app:layout_constraintTop_toBottomOf="@id/buttonEstimate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_baseline_wallet_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:visibility="invisible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>